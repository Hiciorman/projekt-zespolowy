@model ProjectManager.WebApp.Models.LoginViewModel

@using (Html.BeginForm("Login", "Profile", FormMethod.Post, new { @class = "form-center" }))
{
    <h2>Login</h2>
    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
    <input type="submit" name="submitButton" value="Login" class="btn btn-lg btn-primary btn-block margin-top-10px" />
}
