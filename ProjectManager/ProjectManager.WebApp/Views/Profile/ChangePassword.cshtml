@model ProjectManager.WebApp.Models.ChangePasswordViewModel

@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-center" }))
{
    <h1>Change password</h1>
    @Html.TextBoxFor(model => model.CurrentPassword, new { @class = "form-control", placeholder = "Current password" })
    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", placeholder = "New password" })
    <input type="submit" value="Change password" class="btn btn-lg btn-primary btn-block margin-top-10px" />
}