
@model ProjectManager.WebApp.Models.UserAssignmentsViewModel
@{
    ViewBag.Title = "Assignments";
}

<h2>Your assignments</h2>

<div class="container">
    
    @for (int i = 0; i < Model.Projects.Count; i++)
    {
        <div class="row">
            <h3>    @Html.DisplayFor(modelItem => Model.Projects[i].Name)</h3>
        </div>
            foreach (var a in Model.Assignments[i])
            {
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.Name)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.Description)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.Priority.Description)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.Status.Description)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.DueDate)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(Model => a.AssignedTo.UserName)
                    </div>
                 </div>
            }
    }


