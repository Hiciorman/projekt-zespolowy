@model ProjectManager.Domain.Project

@{
    ViewBag.Title = "Details " + Model.Name;
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
    
    <h5>Members under this project:</h5>
    <div>
        @foreach (var member in Model.Members)
        {
            @member.UserName
            <br/>
        }
        @if (Model.Members.Count==0)
        {
        <h4>No members under this project.</h4>
        }

    </div>
    <h5>Assignments under this project:</h5>
    @if (Model.Assignemnts.Count == 0)
    {
        <h4>No assignments under this project.</h4>
    }
    else
    {
    <table class="table">
        <tr>
            <th>
                Programist
            </th>
            <th>
                Category
            </th>
            <th>
                Owner
            </th>
            <th>
                Priority
            </th>
            <th>
                Project
            </th>
            <th>
                Status
            </th>
            <th>
                Assignment name
            </th>
            <th>
                Assignment description
            </th>

        </tr>

        @foreach (var item in Model.Assignemnts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedTo.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </table>
    }
    @Html.RouteLink("Add assignment", new RouteValueDictionary(new { controller = "Assignments", action = "CreateFromProject", id = Model.Id }))
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    </p>
    <p>
        @Html.ActionLink("Generate report", "GenerateReport", new { id = Model.Id }) |
    </p>
</div>
