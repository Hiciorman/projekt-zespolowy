@model ProjectManager.Domain.Assignment

@{
    ViewBag.Title = "Delete assignment: " + Model.Name;
}
<div class="container">
    <h2>@ViewBag.Title</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="row">
        @Html.LabelFor(model => model.Description)
        @Html.DisplayFor(model => model.Description)
    </div>
    <br />
    <div class="row">
        <h4>Properties</h4>
        <table class="table">
            <tr>
                <th>
                    Priority
                </th>
                <th>
                    Status
                </th>
                <th>
                    Due date
                </th>
                <th>
                    Owned by
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Priority.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Status.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Owner.UserName)
                </td>
            </tr>
        </table>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-4">
            <input type="submit" value="Delete" class="btn btn-danger col-md-4" />
        </div>
    }
</div>
